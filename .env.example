# Server
PORT=3000
NODE_ENV=development

# Database
DB_PATH=./data/lifepush.db

# HTTPS (set to true in production)
FORCE_HTTPS=false

# Email (SendGrid / SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@lifepush.app
EMAIL_PASS=your-smtp-password
EMAIL_FROM="LifePush <noreply@lifepush.app>"
APP_BASE_URL=https://lifepush.app

# JWT (for future session tokens)
JWT_SECRET=replace-with-a-long-random-secret
